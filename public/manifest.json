{
    "manifest_version": 3,
    "name": "My AI Brain",
    "version": "1.0",
    "description": "Your external brain context manager",
    "permissions": [
        "storage",
        "sidePanel",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "Open Side Panel"
    }
}